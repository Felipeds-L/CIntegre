generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  school_id  Int?     @unique
  school     School?  @relation(fields: [school_id], references: [id])

  ong_id     Int?     @unique
  ong        Ong?     @relation(fields: [ong_id], references: [id])
}

model School {
  id               Int     @id @default(autoincrement())
  name             String  @unique
  student_quantity Int
  score            Int
  phone_number     String

  address_id       Int
  address          Address? @relation(fields: [address_id], references: [id])

  // Relações
  schoolActivity   SchoolActivity[]
  user             User?
}

model Ong {
  id            Int    @id @default(autoincrement())
  name          String
  description   String
  start_year    Int
  phone_number  String
  social_medias String[]

  // Relações
  Activity      Activity[]
  user          User?
}

model Address {
  id            Int    @id @default(autoincrement())
  street        String
  house_number  String
  cep           String
  complement    String?
  city          String
  state         String

  school        School[]
}

model Activity {
  id              Int      @id @default(autoincrement())
  title           String
  photos          String[] //url
  description     String
  category        Category
  area_expertise  AreaExpertise[]
  status          Status
  pontuation      Int // 100/200 nao mostrar
  
  // Relations
  ong_id           Int
  ong              Ong      @relation(fields: [ong_id], references: [id])
  schoolActivities SchoolActivity[]
}

model SchoolActivity {
  id                Int       @id @default(autoincrement())
  status            Status
  pontuation        Int    //　ong avalia + porcentagem da doacao

  // Relations
  activity_id       Int
  activity          Activity  @relation(fields: [activity_id], references: [id])
  
  school_id         Int
  school            School    @relation(fields: [school_id], references: [id])
}

enum Status {
  open
  in_progress
  closed
}

enum Category {
  donation
  volunteer
}

enum AreaExpertise {
  tecnology
  healty
  gastronomy
  social_services
  fashion
}