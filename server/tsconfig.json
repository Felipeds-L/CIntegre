{
  "compilerOptions": {
    "module": "CommonJS", // Módulos compatíveis com Node.js
    "target": "ES6", // Configuração de compilação para ES6
    "moduleResolution": "node", // Resolver módulos de acordo com o Node
    "esModuleInterop": true, // Permitir interoperabilidade entre ES e CommonJS
    "skipLibCheck": true, // Ignorar verificação de tipos nas bibliotecas
    "strict": true, // Habilitar checagem rigorosa de tipos
    "rootDir": "./src",
    "outDir": "./dist",
    "types": [
      "jest",
      "node"
    ], // Incluir os tipos do Jest
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ], // Incluir arquivos .ts e .tsx
  "exclude": [
    "node_modules"
  ] // Excluir node_modules
}